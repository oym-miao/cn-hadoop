<configuration>

	<property>
    		<name>hbase.tmp.dir</name>
    		<value>/opt/modules/hbase-0.98.6-hadoop2/data/tmp</value>
	</property>

	<!--用于指定文件的存储路径 -->
	<property >
	    <name>hbase.rootdir</name>
   	    <value>hdfs://oym2.com:8082/hbase</value>
	</property>

	<!--设置运行的模式 false:表示单机的  true:分布式的 -->
	<property >
    		<name>hbase.cluster.distributed</name>
    		<value>true</value>
	</property>

        <!--指定zookeeper地址的实例 由于老师用的是伪分布式就只写了一个地址 -->
	<property>
    		<name>hbase.zookeeper.quorum</name>
    		<value>oym.com,oym2.com,oym3.com</value>
	</property>




</configuration>
